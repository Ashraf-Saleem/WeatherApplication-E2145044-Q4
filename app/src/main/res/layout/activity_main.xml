<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_4"
    android:padding="16dp">

    <EditText
        android:id="@+id/etSearchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColorHint="#C6C6C6"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etSearchLocation"
        android:background="@color/common_google_signin_btn_text_light_focused"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:textSize="16sp"
        android:layout_alignParentEnd="true"
        android:onClick="onSearchClicked" />


    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSearch"
        android:layout_marginTop="25dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLocation"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAddress"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTime"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageLocation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvWeather"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_1"        />



    <TextView
        android:id="@+id/tvTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLocation"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageHumidity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvTemperature"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_3"
        />

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageHumidity"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageDescription"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvHumidity"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_2"

        />



    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDescription"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
